<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:padding="8dp"
            app:cardBackgroundColor="@color/colorPrimary">


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@color/colorPrimary">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/textViewName" android:text="Понедельник"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                      android:background="@drawable/rounded_editname"
                      android:padding="8dp"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/textViewDesc" android:text="Помыть посуду"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                      android:background="@drawable/rounded_edittext"
                      android:textColor="@android:color/black"
                      android:padding="8dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.ContentFrameLayout>